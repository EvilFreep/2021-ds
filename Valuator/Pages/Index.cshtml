@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<div class="form-section">
    <form method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <div class="default-block">
                <label>Текст для оценки:</label>
            </div>
            <div class="default-block">
                <textarea name="text" rows="5" required placeholder="Введите текст..."></textarea>
            </div>
            <div class="default-block">
                <input class="btn-light" type="submit"/>
            </div>
        </div>
    </form>
</div>